{
  "name": "libraw",
  "author": "Justin Kambic",
  "version": "0.1.0",
  "description": "Provide a subset of LibRaw functionality.",
  "main": "./dist/libraw.js",
  "types": "./dist/libraw.d.ts",
  "license": "MIT",
  "gypfile": true,
  "dependencies": {
    "@types/node": "^14.14.7",
    "node-addon-api": "^3.0.0",
    "node-pre-gyp": "^0.16.0",
    "node-pre-gyp-github": "^1.4.3",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.15",
    "babel-jest": "^26.6.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.0"
  },
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build && tsc",
    "test": "jest",
    "test-watch": "jest --watch",
    "format": "prettier --write .",
    "format-check": "prettier --check ."
  },
  "binary": {
    "module_name": "node_libraw_binding",
    "module_path": "./build/Release",
    "host": "https://github.com/justinkambic/librawjs/releases/download",
    "remote_path": "{version}"
  }
