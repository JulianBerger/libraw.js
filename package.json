{
  "name": "@julianberger/libraw.js",
  "author": "Justin Kambic",
  "version": "3.1.2",
  "description": "Provide a subset of LibRaw functionality.",
  "main": "./dist/libraw.js",
  "types": "./dist/libraw.d.ts",
  "license": "LGPL-2.1",
  "gypfile": true,
  "dependencies": {
    "node-addon-api": "^7.1.0",
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^29.5.0",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-jest": "^29.7.0",
    "eslint": "^7.14.0",
    "fp-ts": "^2.9.5",
    "husky": "^4.3.6",
    "io-ts": "^2.2.16",
    "jest": "^29.7.0",
    "prettier": "^2.6.0",
    "typedoc": "^0.24.0",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "build": "node-gyp rebuild && tsc",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "generate-docs": "typedoc --plugin typedoc-plugin-markdown --hideBreadcrumbs true --tsconfig ./tsconfig.json ./src/libraw.ts && rm ./docs/README.md",
    "lint": "eslint . --ext .ts",
    "install": "node-gyp-build",
    "test": "jest --runInBand --no-cache",
    "test-watch": "jest --watch"
  },
  "files": [
    "prebuilds",
    "dist"
  ],
  "jest": {
    "testTimeout": 15000,
    "verbose": true
  },
  "bugs": {
    "url": "https://github.com/julianberger/libraw.js/issues"
  },
  "homepage": "https://github.com/julianberger/libraw.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julianberger/libraw.js.git"
  }
}
