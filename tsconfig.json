{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
